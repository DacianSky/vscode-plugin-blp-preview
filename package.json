{
	"name": "blp-preview",
	"displayName": "blp-preview",
	"description": "blp1 image preview, tag image preview, mdx model preview",
	"version": "0.1.8",
	"publisher": "hugehardzhang",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.58.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ilimei/vscode-plugin-blp-preview.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCustomEditor:blpPreview.previewEditor",
		"onCommand:blpPreview.zoomIn",
		"onCommand:blpPreview.zoomOut"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "blpPreview.previewEditor",
				"displayName": "blp-preview",
				"priority": "default",
				"selector": [
					{
						"filenamePattern": "*.{blp,tga,mdx,mdl,w3e}"
					}
				]
			}
		],
		"commands": [
			{
				"command": "blpPreview.convert2png",
				"title": "%blpPreview.convert2png%",
				"category": "Blp Preview"
			},
			{
				"command": "blpPreview.convert2jpg",
				"title": "%blpPreview.convert2jpg%",
				"category": "Blp Preview"
			},
			{
				"command": "blpPreview.convert2blp",
				"title": "%blpPreview.convert2blp%",
				"category": "Blp Preview"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceExtname == .blp",
					"command": "blpPreview.convert2png"
				},
				{
					"when": "resourceExtname == .blp",
					"command": "blpPreview.convert2jpg"
				},
				{
					"when": "resourceExtname == .png || resourceExtname == .jpg || resourceExtname == .jpeg",
					"command": "blpPreview.convert2blp"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "blpPreview configuration",
			"properties": {
				"blpPreview.mpqLocation": {
					"type": "string",
					"default": "",
					"description": "please set mpq file location use to show model texture."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@babel/preset-typescript": "^7.14.5",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.58.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"babel-loader": "^8.2.2",
		"eslint": "^7.27.0",
		"file-loader": "^6.2.0",
		"gl-matrix": "^3.3.0",
		"glob": "^7.1.7",
		"mdx-m3-viewer": "^5.8.2",
		"mocha": "^8.4.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"pako": "^2.0.4",
		"vscode-nls": "^5.0.0"
	},
	"babel": {
		"presets": [
			"@babel/preset-typescript"
		]
	}
}
